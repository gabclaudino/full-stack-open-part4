{
  "devDependencies": {
    "cross-env": "^10.0.0",
    "jest": "^30.1.2",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "mongoose": "^8.18.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node index.js",
